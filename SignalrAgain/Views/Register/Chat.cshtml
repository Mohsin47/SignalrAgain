<div class="container" style="margin-top:50px;margin-left:100px;">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="" style="background-color: #0099cc;">
                    <i class="fas fa-comment-alt"style="margin-left:20px;"></i> Chat
                    <i class="fas fa-user" style="margin-left:450px;"></i> @ViewBag.Name
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-chevron-down"></span>
                        </button>
                        <ul class="dropdown-menu slidedown">

                            <li>
                                <a asp-controller="Register" asp-action="logout" class="btn btn-danger"><i class="fas fa-sign-out-alt"></i>Logout</a>

                            </li>
                        </ul>
                    </div>

                </div>
                
                <div class="panel-body"style="margin-top:35px;">
                    <div class="col-md-12" id="chat">
                        @if (Model != null)
                        {
                            @foreach (var message in Model.OrderBy(m => m.When))
                            {
                                string containerClass, timePosition, textAlign, contcolor, offset;
                                if (userName == message.UserName)
                                {
                                    containerClass = "container darker";
                                    timePosition = "time-right text-white";
                                    textAlign = "text-right text-black ";
                                    contcolor = "bg-warning";
                                    offset = "col-md-6 offset-md-6";
                                }
                                else
                                {
                                    containerClass = "container";
                                    timePosition = "time-left text-white";
                                    textAlign = "text-left";
                                    contcolor = "bg-info";
                                    offset = "";
                                }

                                <div class="@offset">
                                    <ul class="chat @containerClass">
                                        <li class="left clearfix">
                                            <span class="chat-img pull-left">
                                                <img src="~/images/man (3).png" alt="User Avatar" class="img-circle img-fluid">
                                            </span>
                                            <div class="chat-body clearfix">
                                                <div class="header">
                                                    <strong class="primary-font">@message.UserName</strong> <small class="pull-right text-muted"><br />
                                                        <span class="glyphicon glyphicon-time @timePosition"></span>@message.When.ToString("M/dd/yyyy hh:MM tt")
                                                    </small>
                                                </div>
                                                <p class="@textAlign ,@contcolor"style="font-size:20px;">
                                                    @message.Text
                                                </p>
                                            </div>
                                        </li>

                                    </ul>

                                </div>
                            }}
                    </div>
                    <div class="panel-footer">
                        <div class="input-group">
                            <form asp-action="Create"
                                  data-ajax-begin="clearInputField" data-ajax-complete=""
                                  data-ajax-failure="alert('Fail')" data-ajax-success="sendMessage"
                                  data-ajax="true" data-ajax-method="POST">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                @*<div class="form-group">
                                    <input name="Text" class="form-control input-sm" id="messageText" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Send" id="submitButton" class="btn btn-outline-dark btn-primary" />
                                </div>*@


                            <div class="panel-footer">
                                <div class="input-group" style="width:500px;margin-left:70px;">
                                    <input id="messageText" name="Text" type="text" class="form-control " placeholder="Type your message here...">
                                    @*<span class="input-group-btn">*@
                                    @*</span>*@
                                    <input type="submit" value="Send" id="submitButton" class="btn btn-warning btn-outline-info" style="margin-left:25px;" />
                                </div>
                            </div>


                                <input type="hidden" value="@userName" name="username" />
                            </form>

                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>





































