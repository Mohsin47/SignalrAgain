@model SignalrAgain.Models.User







<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -ThemeImplementation</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    <!--<link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/jquery.timepicker.css" />
    <link rel="stylesheet" href="~/css/jquery-ui.css" />-->
    <link href="~/css/Registration.css" rel="stylesheet" />

</head>



<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        @*<h2 class="active"> Sign In </h2>
            <h2 class="inactive underlineHover">@Html.ActionLink("Sign Up", "Register", "Account")</h2>*@

        <!-- Icon -->
        <div class="fadeIn first">
            <img src="~/251b2149eaec4186854efbe24ee7d14e.png" id="icon" alt="User Icon" />
        </div>

        <!-- Login Form -->
        <form method="post">
            <div class="form-group" style="margin-left:30px;margin-top:10px;">
                <div class="col-md-10">
                    <label asp-for="Email"></label><br />
                    <input asp-for="Email" class="form-control" type="text" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group" style="margin-left: 30px; margin-top: 10px;">
                <div class="col-md-10">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            @*<div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>*@



            <div class="form-group" style="margin-left:15px;">
                @ViewBag.error
            </div>


            <div class="form-group" style="margin-left:15px;margin-top:10px;">
                <input type="submit" class="fadeIn fourth" value="Login" />

            </div>


        </form>



        <!-- Remind Passowrd -->
        @*<div id="formFooter">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </div>*@
        @*<p>
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        </p>*@
    </div>




</div>